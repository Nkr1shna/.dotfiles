{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#00A676",
                    "style": "plain",
                    "template": "{{ .UserName }} ",
                    "type": "session"
                },
                {
                    "foreground": "#67597A",
                    "properties": {
                        "style": "folder"
                    },
                    "style": "plain",
                    "template": "<#ffffff>in</> {{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#78C3FB",
                    "properties": {
                        "branch_icon": " <#78C3FB><b>\ue0a0 </b></>",
                        "fetch_stash_count": true
                    },
                    "style": "plain",
                    "template": "<#ffffff>on</> {{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#E0D100",
                    "style": "plain",
                    "template": "·ùê",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3,
    "upgrade": {
        "notice": true,
        "interval": "168h",
        "auto": false,
        "source": "cdn"
    }
}